{
  "name": "@lhremote/mcp",
  "version": "0.1.0",
  "description": "MCP server for LinkedHelper automation",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "license": "AGPL-3.0-only",
  "author": "Alexey Pelykh (https://github.com/alexey-pelykh)",
  "homepage": "https://github.com/alexey-pelykh/lhremote/tree/main/packages/mcp",
  "bugs": "https://github.com/alexey-pelykh/lhremote/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexey-pelykh/lhremote.git",
    "directory": "packages/mcp"
  },
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./stdio": {
      "types": "./dist/stdio.d.ts",
      "import": "./dist/stdio.js"
    }
  },
  "bin": {
    "lhremote-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:e2e": "vitest run --config ../../vitest.e2e.config.ts",
    "lint": "eslint src/",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@lhremote/core": "workspace:^",
    "@modelcontextprotocol/sdk": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
